{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "stream_fmt": {
            "format": "[%(levelname)s]: %(message)s"
        },
        "json_fmt": {
            "()": "vj.log_utils.formatters.JSONFormatter"
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": [
            "console",
            "file"
        ]
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout",
            "level": "INFO",
            "formatter": "stream_fmt"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "json_fmt",
            "filename": "logs/tj.log.jsonl",
            "maxBytes": 10000,
            "backupCount": 3
        }
    }
}